# ============================================
# Lithium Bot - Production Environment
# Domain: lithiumbot.xyz
# ============================================

# --- GENERAL ---
APP_ENV=production
LOG_LEVEL=INFO

# --- DATABASE (Postgres) ---
POSTGRES_USER=lithium_admin
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=lithium
DATABASE_URL=postgresql+asyncpg://lithium_admin:CHANGE_ME_STRONG_PASSWORD@postgres:5432/lithium

# --- CACHE & BUS (Redis) ---
REDIS_URL=redis://redis:6379/0

# --- DISCORD (Developer Portal) ---
DISCORD_TOKEN=YOUR_BOT_TOKEN_HERE
DISCORD_CLIENT_ID=YOUR_CLIENT_ID_HERE
DISCORD_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE
DISCORD_REDIRECT_URI=https://lithiumbot.xyz/auth/callback

# --- SECURITY ---
JWT_SECRET=GENERATE_A_64_CHAR_RANDOM_STRING_HERE
DJANGO_SECRET_KEY=GENERATE_ANOTHER_64_CHAR_RANDOM_STRING

# --- PANEL & API DOMAINS ---
DOMAIN=lithiumbot.xyz
FRONTEND_URL=https://lithiumbot.xyz
PUBLIC_API_URL=https://lithiumbot.xyz/api

# --- PRODUCTION HARDENING ---
ALLOWED_HOSTS=lithiumbot.xyz,www.lithiumbot.xyz,localhost
CSRF_TRUSTED_ORIGINS=https://lithiumbot.xyz,https://www.lithiumbot.xyz
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
HSTS_SECONDS=31536000
