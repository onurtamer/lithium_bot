# --- GENERAL ---
APP_ENV=production # production or development
LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR

# --- DATABASE (Postgres) ---
POSTGRES_USER=lithium_admin
POSTGRES_PASSWORD=your_secure_db_password
POSTGRES_DB=lithium
# Django needs sync driver, API/Bot need asyncpg
DATABASE_URL=postgresql+asyncpg://lithium_admin:your_secure_db_password@postgres:5432/lithium

# --- CACHE & BUS (Redis) ---
REDIS_URL=redis://redis:6379/0

# --- DISCORD (Developer Portal) ---
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=https://your-domain.com/auth/callback

# --- SECURITY ---
JWT_SECRET=generate_a_long_random_string_for_api_and_panel
DJANGO_SECRET_KEY=generate_another_separate_random_string

# --- PANEL & API DOMAINS ---
DOMAIN=your-domain.com
FRONTEND_URL=https://your-domain.com
PUBLIC_API_URL=https://your-domain.com/api

# --- PRODUCTION HARDENING ---
ALLOWED_HOSTS=your-domain.com,localhost
CSRF_TRUSTED_ORIGINS=https://your-domain.com
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
HSTS_SECONDS=31536000 # 1 year
